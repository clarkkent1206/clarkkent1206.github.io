<div class="form-signin mt-4 col-md-8">
  <form class="m-3">
    <img class="mb-4" src="assets/images/Batman_logo.png" alt="Brand Logo" width="72" height="40">
    <h1 class="h3 mb-3 font-weight-normal">Please sign up</h1>
    <div class="row">
        <div class="col-lg-6">
            <div class="form-group">
                <label class="float-left">First Name</label>
                {{input type="text" class="form-control" value=firstName placeholder="Bruce"}}
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label class="float-left">Middle Name</label>
                {{input type="text" class="form-control" value=middleName placeholder="(optional)"}}
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="float-left">Last Name</label>
        {{input type="text" class="form-control" value=lastName placeholder="Wayne"}}
    </div>
    <div class="form-group">
        <label class="float-left">Aadhaar Number</label>
        {{input type="text" class="form-control" value=aadhaarNumber placeholder="XXXX XXXX XXXX" maxlength="12"}}
    </div>
    <div class="form-group">
        <label class="float-left">Address</label>
        {{textarea class="form-control" value=address placeholder="Enter your address"}}
    </div>
    <div class="row">
        <div class="col-lg-6">
            <div class="form-group">
                <label class="float-left">City</label>
                {{input type="text" class="form-control" value=city placeholder="Gotham"}}
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label class="float-left">Pincode</label>
                {{input type="text" class="form-control" value=pincode placeholder="XXX XXX" maxlength="6"}}
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="float-left">Mobile Number</label>
        {{input type="tel" class="form-control" value=mobile placeholder="XXXXX XXXXX" maxlength="10"}}
    </div>
    <div class="form-group">
        <label class="float-left">Driver's License Number</label>
        {{input type="text" class="form-control" value=driverLicenseNumber placeholder="XXXX XXXX XXXXXXX" maxlength="15"}}
    </div>
    <div class="form-check mb-3 float-left">
        {{input type="checkbox" class="form-check-input"}}
        <label class="form-check-label">I agree to Terms and Conditions</label>
    </div>
    <button type="submit" class="btn btn-outline-dark btn-block" {{action "addUser"}}>Sign Up</button>
  </form>
</div>
